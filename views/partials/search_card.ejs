<!-- Search Card -->
<div class="container search-card">
    <!-- Search form -->
    <form class="card card-sm" action="/search" method="post">
        <div class="card-body row no-gutters align-items-center">
            <div class="col-auto">
                <i class="fas fa-search h4 text-body"></i>
            </div>
            <!--end of col-->
            <div class="col">
                <input class="form-control form-control-lg form-control-borderless" type="search" name="address"
                       placeholder="Search keywords or author">
            </div>
            <!--end of col-->
            <div class="col-auto">
                <button class="btn btn-lg btn-success" type="submit">Input an address</button>
            </div>
            <!--end of col-->
        </div>
    </form>
</div>

